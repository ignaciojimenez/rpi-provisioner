# Raspberry Pi Host Presets Configuration
# 
# Define host-specific configurations that can be used with:
#   ./provision_pi <image> <hostname> [options]
#
# If hostname matches a preset, these settings will be applied automatically.
# You can still override any setting with command-line flags.

presets:
  host_type_1:
    description: "Description of host_type_1"
    
  host_type_2:
    description: "Description of host_type_2" 
    hardware:
      - type: "hifiberry-dacplus"
        config: |
          dtoverlay=hifiberry-dacplus
          dtparam=audio=off

  devpi:
    description: "Development/testing Pi"
    disable_wifi: false

# Default settings (used if no preset matches)
# Copy this file to hosts.yml and customize with your settings
defaults:
  user: "pi"
  password: "raspberry"
  timezone: "UTC"
  locale: "en_US.UTF-8"
  keymap: "us"
  github: ""  # Your GitHub username (optional - for SSH key fetching)
  disable_wifi: false
  wifi_ssid: ""  # Your WiFi network name
  wifi_pass: ""  # Your WiFi password
